{
  "expo": {
    "name": "Newgen Bank",
    "slug": "uaereactnativeapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/androidIcon.png",
    "scheme": "uaereactnativeapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/androidIcon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.uaereactnativeapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@config-plugins/react-native-blob-util",
      "@config-plugins/react-native-pdf",
      [
        "expo-splash-screen",
        {
          "image": "./assets/LogoSplash.png",
          "imageWidth": 200,
          "resizeMode": "cover",
          "backgroundColor": "#3C1053"
        }
      ],
      [
        "@react-native-community/datetimepicker",
        {
          "android": {
            "datePicker": {
              "colorAccent": {
                "light": "#3C1053"
              },
              "textColorPrimary": {
                "light": "#3C1053"
              },
              "colorControlActivated": {
                "light": "#3C1053"
              },
              "windowBackground": {
                "light": "#E6D9F5"
              }
            },
            "timePicker": {
              "background": { "light": "#FF5722", "dark": "#383838" },
              "numbersBackgroundColor": {
                "light": "#FF5722",
                "dark": "#383838"
              }
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
